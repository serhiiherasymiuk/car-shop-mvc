@model DataBase.Entities.Car;

<h1>Edit Car</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Model" class="form-label">Model</label>
        <input  asp-for="Model" type="text" class="form-control" placeholder="Enter model">
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Color" class="form-label">Color</label>
        <input  asp-for="Color" type="text" class="form-control" placeholder="Enter color">
        <span asp-validation-for="Color" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ReleaseYear" class="form-label">ReleaseYear</label>
        <input  asp-for="ReleaseYear" type="number" class="form-control" placeholder="Enter release year">
        <span asp-validation-for="ReleaseYear" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input  step="0.01" asp-for="Price" type="number" class="form-control" placeholder="Enter price">
        <span asp-validation-for="Price" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Run" class="form-label">Run</label>
        <input asp-for="Run" type="number" class="form-control" placeholder="Enter run">
        <span asp-validation-for="Run" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="OwnersNumber" class="form-label">Owners number</label>
        <input asp-for="OwnersNumber" type="number" class="form-control" placeholder="Enter owners number">
        <span asp-validation-for="OwnersNumber" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="ImagePath" class="form-label">Image path</label>
        <input asp-for="ImagePath" type="url" class="form-control" placeholder="Enter image path">
        <span asp-validation-for="ImagePath" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="BrandId" class="form-label">Brand</label>
        <select asp-for="BrandId" asp-items="@ViewBag.BrandList" class="form-select"></select>
        <span asp-validation-for="BrandId" class="form-text text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-warning w-100">Edit</button>
    </div>
</form>